PassengerAppRoot /home/yourusername/public_html/hrms-portal
PassengerAppType python
PassengerStartupFile passenger_wsgi.py
PassengerPython /home/yourusername/virtualenv/your-env/bin/python3

RewriteEngine On

# Serve collected static files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^static/(.*)$ /staticfiles/$1 [L]

# Serve media files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^media/(.*)$ /media/$1 [L]
